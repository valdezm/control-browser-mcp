{
  "manifest_version": 3,
  "name": "MCP Browser Tools!!!",
  "version": "1.0.0",
  "description": "Implements browser automation tools as requested by MCP server.",
  "permissions": ["scripting", "activeTab", "storage", "tabs"],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:9009/*",
    "ws://localhost:9009/*"
  ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": { "16": "icon.png", "48": "icon.png", "128": "icon.png" }
}
